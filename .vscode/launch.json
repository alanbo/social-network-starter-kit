  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api/",
      "remoteRoot": "/app/",
      "protocol": "inspector",
      "restart": true,
      "skipFiles": [
        "${workspaceFolder}/api/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}